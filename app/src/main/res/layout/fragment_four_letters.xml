                android:gravity="center"
                style="@style/cell_text_regular"
                android:background="@drawable/cell_text_view">
            </TextView>
            <TextView
                android:layout_margin="@dimen/cell_margin"
                android:id="@+id/cell_1_2"
                android:layout_height="@dimen/cell_size_four_letters"
