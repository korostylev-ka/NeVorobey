    </TableLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/input_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/table_5"
        android:layout_margin="@dimen/common"
        android:text="@string/enter_letters"
        android:background="@null"
        style="@style/cell_text_input"
        android:gravity="center">
    </TextView>

    <TableLayout
        android:id="@+id/table_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common"
        app:layout_constraintTop_toBottomOf="@id/input_text_view"
        app:layout_constraintStart_toStartOf="@id/table_5"
        app:layout_constraintEnd_toEndOf="@id/table_5">
        <TableRow
            android:id="@+id/table_input_row">
            <TextView
                android:id="@+id/input_1"
                android:maxLength="1"
                android:layout_margin="@dimen/cell_margin"
                android:layout_height="@dimen/cell_size_four_letters"
                android:layout_width="@dimen/cell_size_four_letters"
                android:gravity="center"
                style="@style/cell_text_input"
                android:background="@drawable/cell_input_edit_text">
            </TextView>
            <TextView
                android:id="@+id/input_2"
                android:maxLength="1"
                android:layout_margin="@dimen/cell_margin"
                android:layout_height="@dimen/cell_size_four_letters"
                android:layout_width="@dimen/cell_size_four_letters"
                android:gravity="center"
                style="@style/cell_text_input"
                android:background="@drawable/cell_input_edit_text">
            </TextView>
            <TextView
                android:id="@+id/input_3"
                android:maxLength="1"
                android:layout_margin="@dimen/cell_margin"
                android:layout_height="@dimen/cell_size_four_letters"
                android:layout_width="@dimen/cell_size_four_letters"
                android:gravity="center"
                style="@style/cell_text_input"
                android:background="@drawable/cell_input_edit_text">
            </TextView>
            <TextView
                android:id="@+id/input_4"
                android:maxLength="1"
                android:layout_margin="@dimen/cell_margin"
                android:layout_height="@dimen/cell_size_four_letters"
                android:layout_width="@dimen/cell_size_four_letters"
                android:gravity="center"
                style="@style/cell_text_input"
                android:background="@drawable/cell_input_edit_text">
            </TextView>

        </TableRow>

    </TableLayout>
    <EditText
        android:id="@+id/input"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/table_input"
        app:layout_constraintStart_toStartOf="parent">

    </EditText>
    <FrameLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/table_input"
        app:layout_constraintBottom_toTopOf="@id/button_ok">


    </FrameLayout>


    <ImageView
        android:id="@+id/button_ok"
        app:icon="@drawable/ic_ok_button_48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common"
        android:src="@drawable/ic_ok_button_enabled_disabled_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common"
        android:src="@drawable/ic_cancel_button_enabled_disabled_48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>